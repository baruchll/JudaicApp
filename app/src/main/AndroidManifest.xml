            android:name=".screens.StartAnimation"
            android:exported="true"
            android:theme="@style/Theme.JudaicApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.others.rav_chat.BanScreen"
            android:exported="true" />
        <activity
            android:name=".screens.Siddurim.EdotSiddur"
            android:exported="true" />
        <activity
            android:name=".HomeScreen"
            android:exported="true"
            android:label="@string/title_activity_home_screen"
            android:theme="@style/Theme.JudaicApp.NoActionBar" >
        </activity>
        android:name=".screens.others.JewishCalendar.Calendar"
        android:exported="true">
