<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.Siddur">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">

        <Button
            android:id="@+id/Ashkenaz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/two"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/ashkenaz_siddur" />

        <Button
            android:id="@+id/Sefard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/three"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/sefard_siddur" />

        <Button
            android:id="@+id/Edot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/four"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/edot_hamizrach_siddur" />

        <Button
            android:id="@+id/TefilatHaderech"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/five"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/tefilat" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>